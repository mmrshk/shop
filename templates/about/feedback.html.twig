{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
    {% for message in app.flashes('info') %}
        <p class="bg-success">{{ message }}</p>
    {% endfor %}
        <div class="row">
            <div class="col-xs-12 col-md-6">
            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-default">Отправить</button>
            {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}



